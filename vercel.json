{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/",
      "methods": ["POST"],
      "dest": "api/webhook.py"
    },
    {
      "src": "/api/scheduled",
      "dest": "api/scheduled.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/scheduled",
      "schedule": "0 */4 * * *"
    }
  ]
}